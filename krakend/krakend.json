{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/v1/movies/add",
      "method": "POST",
      "output_encoding": "json",

      "backend": [
        {
          "url_pattern": "/v1/movies/add",
          "encoding": "safejson",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://movie_service:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/v1/movies",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1/movies",
          "encoding": "json",
          "is_collection": true,
          "sd": "static",
          "method": "GET",
          "host": [
            "http://movie_service:8000"
          ],
          "mapping": {
            "collection": "movies"
          }
        }
      ]
    },
    {
      "endpoint": "/v1/users/add",
      "method": "POST",
      "output_encoding": "json",

      "backend": [
        {
          "url_pattern": "/v1/users/add",
          "encoding": "safejson",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://auth_service:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/v1/users",
      "method": "GET",
      "input_headers": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1/users",
          "sd": "static",
          "method": "GET",
          "is_collection": true,
          "host": [
            "http://auth_service:8000"
          ],
          "mapping": {
            "collection": "users"
          }
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_local_path": "jwk_private_key.json",
          "disable_jwk_security": true,
          "operation_debug": true
        }
      }
    },
    {
      "endpoint": "/v1/login",
      "method":  "POST",
      "backend": [
        {
          "url_pattern": "/v1/login",
          "encoding": "safejson",
          "host": [
              "http://auth_service:8000"
          ]
        }
      ],
      "extra_config": {
        "auth/signer": {
          "alg": "HS256",
          "jwk_local_path": "jwk_private_key.json",
          "keys_to_sign": ["access_token"],
          "disable_jwk_security": true,
          "full": false,
          "kid": "sim2"
        }
      }
    },
    {
      "endpoint": "/v1/payment/buy",
      "method": "POST",
      "input_headers": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1/payment/buy",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://payment_service:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/v1/users/delete/{user_uuid}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1/users/delete/{user_uuid}",
          "encoding": "safejson",
          "sd": "static",
          "method": "DELETE",
          "host": [
            "http://auth_service:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/v1/users/put/{user_uuid}",
      "method": "PUT",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1/users/put/{user_uuid}",
          "encoding": "safejson",
          "sd": "static",
          "method": "PUT",
          "host": [
            "http://auth_service:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/v1/users/update_role/{user_uuid}",
      "method": "PUT",
      "output_encoding": "json",
      "input_query_strings": [
        "role"
      ],
      "backend": [
        {
          "url_pattern": "/v1/users/update_role/{user_uuid}",
          "encoding": "safejson",
          "sd": "static",
          "method": "PUT",
          "host": [
            "http://auth_service:8000"
          ]
        }
      ]
    }
  ]
}